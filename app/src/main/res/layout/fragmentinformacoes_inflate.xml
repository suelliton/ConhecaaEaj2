<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:weightSum="1">

    <android.support.constraint.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:layout_editor_absoluteY="0dp"
        tools:layout_editor_absoluteX="0dp">

        <TextView
            android:id="@+id/tx_nome"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginEnd="108dp"
            android:layout_marginStart="108dp"
            android:gravity="center"
            android:textSize="22dp"
            tools:layout_editor_absoluteX="192dp"
            tools:layout_editor_absoluteY="7dp" />

        <ImageView
            android:id="@+id/foto"
            android:layout_width="372dp"
            android:layout_height="192dp"
            android:layout_weight="0.52"

            android:layout_marginStart="8dp"
            android:layout_marginEnd="8dp"
            tools:layout_editor_absoluteX="8dp"
            android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@+id/tx_nome" />

        <TextView
            android:id="@+id/tx_descricao"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="descricao"
            android:layout_marginStart="26dp"
            tools:layout_editor_absoluteX="26dp"
            android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@+id/foto" />

        <TextView
            android:id="@+id/tx_responsavel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="responsavel"
            android:layout_marginStart="26dp"
            tools:layout_editor_absoluteX="26dp"
            android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@+id/tx_descricao" />

        <TextView
            android:id="@+id/tx_telefone"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="telefone"
            android:layout_marginStart="26dp"
            tools:layout_editor_absoluteX="26dp"
            android:layout_marginTop="15dp"
            app:layout_constraintTop_toBottomOf="@+id/tx_responsavel" />

        <TextView
            android:id="@+id/tx_email"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="email"
            android:layout_marginStart="26dp"
            tools:layout_editor_absoluteX="26dp"
            android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@+id/tx_telefone" />

        <TextView
            android:id="@+id/tx_horario"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="horario"
            tools:layout_editor_absoluteX="26dp"
            android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@+id/tx_email" />
    </android.support.constraint.ConstraintLayout>


</LinearLayout>